{% extends '::front_layout.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div  class="box-header">
                    <h3 class="box-title col-lg-11">Modificar vacuna</h3>
                    <a class="col-lg-1" href="{{ path('vacuna') }}">
                        <i class="fa fa-fw fa-reply ">Volver</i>
                    </a>
                </div>
                <form id="form_vacuna_edit"action="{{ path('vacuna_update',{'id':entity.id}) }} " role="form"
                      method="post">
                    <input type="hidden" name="_method" value="put"/>
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(edit_form.nombre) }}
                            {{ form_widget(edit_form.nombre) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.caduca) }}
                            {{ form_widget(edit_form.caduca) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.descripcion) }}
                            {{ form_widget(edit_form.descripcion) }}
                            {{ form_errors(edit_form) }}
                            {{ form_widget(edit_form._token) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.estado) }}
                            {{ form_widget(edit_form.estado) }}


                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-lg-2">
                                <button type="submit" class="btn btn-block btn-primary "><span
                                            class="icon-checkmark"></span> Actualizar
                                </button>

                            </div>
                            <div class="col-lg-2">
                                <a class="btn btn-block btn-default " href="{{ path('vacuna') }}">
                                    <span class="icon-cancel-2"></span> Cancelar
                                </a>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

