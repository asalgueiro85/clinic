{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block nomencladores %} active {% endblock %}
 {% block nmascota %} active {% endblock %}
{% block especie %} class="active" {% endblock %}

{% block body -%}
    <h1><i class="fa fa-tag"></i> Especies</h1>

    <div class="box box-solid box-primary">
        <div  class="box-header">
            <h3 class="box-title col-lg-11">Modificar especie</h3>
            <a class="col-lg-1" href="{{ path('especie') }}">
                <i class="fa fa-fw fa-reply ">Volver</i>
            </a>
        </div><!-- /.box-header -->
        <!-- form start -->
        {{ form_start(edit_form) }}
        <div class="box-body">
            {{ form_errors(edit_form) }}
            <div class="form-group">
                {{ form_row(edit_form.nombre) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.descripcion) }}
            </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a class="btn btn-default" href="{{ path('especie') }}">Cancelar</a>
        </div>
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
