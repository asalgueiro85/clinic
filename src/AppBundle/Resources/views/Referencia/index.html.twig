{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block nomencladores %} active {% endblock %}
 {% block ncliente %} active {% endblock %}
 {% block referencia %} class="active" {% endblock %}


{% block body -%}
    <h1><i class="fa fa-globe"></i> ¿Cómo nos conoció?</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Referencias</h3>

                    <div class="pull-right">
                        <a href="{{ path('referencia_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th >Nombre</th>
                            <th >Descripcion</th>
                            <th class="col-lg-1 text-center">Estado</th>
                            <th class="col-xs-2 text-center">Opciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.nombre }}</td>
                                <td>{{ entity.descripcion }}</td>
                                <td>
                                    {% if entity.mostrar %}
                                        <span class="badge center-block" style="padding-left: 2%; padding-right: 2%; background: green">Activo</span>
                                    {% else %}
                                        <span class="badge center-block" style="padding-left: 2%; padding-right: 2%; background: red">Inactivo</span>
                                    {% endif %}
                                </td>
                                <td align="center">
                                    <a title="Editar" style="margin-right: 20px" href="{{ path('referencia_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                    <a title="Eliminar" id="delete" href="#" onclick='eliminar("{{ path('referencia_delete', { 'id': entity.id }) }}")'><i class="fa fa-times-circle"></i></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}
