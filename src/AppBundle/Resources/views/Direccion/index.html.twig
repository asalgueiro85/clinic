{% extends 'front_layout.html.twig' %}

{% block body -%}
    <h1>Direccion list</h1>

    <table class="table striped bordered hovered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Direccion</th>
                <th>Departamento</th>
                <th>Referencia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('direccion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.departamento }}</td>
                <td>{{ entity.referencia }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('direccion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('direccion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('direccion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
