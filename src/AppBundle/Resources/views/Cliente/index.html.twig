{% extends '::front_layout.html.twig' %}

 {% block cliente %} class="active" {% endblock %}


{% block body -%}
    <h1><i class="fa fa-users"></i> Clientes</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Clientes</h3>

                    <div class="pull-right">
                        <a href="{{ path('cliente_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Animales</th>
                            <th class="col-xs-2 text-center">Opciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('cliente_show', {'id': entity.id}) }}">{{ entity.nombre }} {{ entity.apellidos }}</td>

                                <td>
                                    {% for mascota in entity.mascotas %}

                                        <a href="{{ path('mascota_edit', { 'id': mascota.id }) }}">{{ mascota.nombre }}</a>
                                        {% if not loop.last %}
                                            -
                                        {% endif %}
                                    {% endfor %}

                                </td>
                                <td align="center">
                                    <a title="Editar" style="margin-right: 20px" href="{{ path('cliente_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                    <a title="Eliminar" id="delete" href="#" onclick='eliminar("{{ path('cliente_delete', { 'id': entity.id }) }}")'><i class="fa fa-times-circle"></i></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}
